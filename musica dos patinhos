using System;
for( int i =5; i >=1; i--)
{
	
	if (i >= 3)
	{
	Console.Write($" {i} patinhos foram passear \n Além das montanhas para brincar \n A mamã gritou quá, quá, quá,\n quá Mas só {i -1}  patinhos voltaram de lá \n\n");
	}
	
	if ( i ==2)
	{
		Console.Write($" {i} patinhos foram passear \n Além das montanhas para brincar \n A mamã gritou quá, quá, quá,\n quá Mas só {i -1}  patinho voltou  de lá \n\n");
	}
	if (i ==1) 
	{
		Console.Write($" {i} patinho foi passear \n Além das montanhas para brincar \n A mamã gritou quá, quá, quá, Mas nenhum patinho voltou de lá");
	}
	
}
